<!DOCTYPE html>
<html>
 <head>
 <% include ./partials/head %>
 </head>
 <body>
   <header>
     <% include ./partials/header %>
   </header>
   <h1 class='center'>My Courses</h1>
   <hr />
   <div class='row'>
     <div class='col s12 m4'>
       <h3>Add additional courses</h3>
       <form action='/schools' method='post'>
         <input type='text' name='title' placeholder='name' />
         <input type='text' name='description' placeholder='description' />
         <button class='btn btn-waves' type='submit'>Add</button>
       </form>
     </div>
     <table class='table col m8 s12'>
       <thead>
         <th>Title</th>
         <th>Description</th>
         <th>x</th>
       </thead>
       <tbody>
         <% schools.forEach( function(school) { %>
           <% action = '/schools/' + school.id %>
           <tr>
             <td><a href=<%= action %>><%= school.title %></a></td>
             <td><%= school.description %></td>
             <td>
               <form action=<%= action %> method='POST'>
                 <button class='btn waves-effect' type='submit'>Delete</button>
               </form>
             </td>
         <% }); %>
       </tbody>
     </table>
   </body>
</html>